{
  "name": "backend",
  "version": "1.0.0",
  "description": "FlipkartClone by selvakumar",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cd .. && cd frontend && npm run build",
    "install-client": "cd .. && cd frontend && npm install",
    "web": "npm run install-client && npm run build && npm run dev",
    "server": "nodemon server.js",
    "client": "cd .. && cd frontend && npm start",
    "dev": "concurrently -c red,green -n server,client  \"npm run server\" \"npm run client\""
  },
  "author": "Selvakumar D",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http": "^0.0.1-security",
    "mongoose": "^8.5.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  }
}
